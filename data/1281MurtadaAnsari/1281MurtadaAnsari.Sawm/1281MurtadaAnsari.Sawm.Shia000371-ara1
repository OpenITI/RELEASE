# (4) في " ج " و " ع " زيادة: منهم.
# (5) في " م ": بتخصيص، بدل فمعنى تخصيص.
# (6) ليس في " ج ": منهم.
# (7) ما بين المعقوفتين ليس في " ج " و " ع ".
# (8) ليس في " ف ": منهم.
# (9) في " ف ": ولم يكونا.
# (10) في " ع ": فيها.
# (11) ما بين المعقوفتين ليس في " ج " و " ع ".
(1) ليس في " ف " عموم.
# (2) ليس في " ف ": إلا.
# (3) في " ج ": والثالثة.
# (4) في " ف ": من وجهين.
# (5) في " ف ": وخصوصه.
# (6) في " ج " و " ع " و " م ": وإبقاء عموم الآخر.
