# (4) من " ج ".
(1) لم ترد " عبادة " في " ح ".
# (2) ما بين المعقوفتين ساقط من " ع ".
(1) كذا في " أ " و " ب " ومصححة " ح " و " ج "، وفي " ع ": " هذا ".
(1) ما بين المعقوفتين لم يرد في " ع ".
(1) من المصدر ومصححة " ع ".
# (2) من " ع ".
# (3) من المصدر ومصححة " ع ".
# (4) في غير " ع ": " يجعل الوقت ".
# (5) " بعدها " من " ع ".
# (6) الذكرى: 177.
(1) من غير " ع ".
# (2) في " ج " و " ح ": " كونه ".
# (3) لم ترد " صورة " في " ع ".
(١) كذا في المصدر، وفي النسخ: " ابن هريرة ".
# (٢) في " ح " و " ع ": " الفريضة ".
# (٣) في " ع ": " الفريضة ".
